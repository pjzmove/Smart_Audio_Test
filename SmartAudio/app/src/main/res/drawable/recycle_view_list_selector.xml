<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/white" android:state_pressed="false" android:state_selected="false"/>
    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:drawable="@color/orange_54" android:state_pressed="true"/>
    <item android:drawable="@color/orange_light_tone_75" android:state_pressed="false" android:state_selected="true"/>

</selector>
