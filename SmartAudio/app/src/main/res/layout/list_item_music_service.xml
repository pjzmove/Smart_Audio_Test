<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="@dimen/list_item_music_service_height"
	android:background="@color/music_service_background">

	<ImageView
		android:id="@+id/music_service_icon"
		android:layout_width="@dimen/list_item_music_service_icon_width"
		android:layout_height="@dimen/list_item_music_service_icon_width"
		android:scaleType="center"
		android:layout_margin="@dimen/list_item_music_service_margin"/>

	<com.qualcomm.qti.smartaudio.view.CustomFontTextView
		android:id="@+id/music_service_text"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_marginRight="@dimen/list_item_music_service_margin"
		android:gravity="left|center"
		style="@style/MusicServiceTextView"/>
</LinearLayout>