<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/setup_fragment_background"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<FrameLayout
			android:id="@+id/setup_bar_frame"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">

		<FrameLayout
			android:id="@+id/setup_frame"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

	</LinearLayout>

	<com.qualcomm.qti.smartaudio.view.CustomFontButton
		android:layout_width="match_parent"
		android:layout_height="@dimen/setup_fragment_button_height"
		android:id="@+id/setup_top_button"
		style="@style/SetupFragmentButton"/>

	<View
		android:id="@+id/setup_divider1"
		android:layout_width="match_parent"
		android:layout_height="@dimen/setup_fragment_button_divider_height"
		android:background="@color/setup_fragment_button_divider"/>

	<com.qualcomm.qti.smartaudio.view.CustomFontButton
		android:layout_width="match_parent"
		android:layout_height="@dimen/setup_fragment_button_height"
		android:id="@+id/setup_middle_button"
		style="@style/SetupFragmentButton" />

	<View
		android:id="@+id/setup_divider2"
		android:layout_width="match_parent"
		android:layout_height="@dimen/setup_fragment_button_divider_height"
		android:background="@color/setup_fragment_button_divider"/>

	<com.qualcomm.qti.smartaudio.view.CustomFontButton
		android:layout_width="match_parent"
		android:layout_height="@dimen/setup_fragment_button_height"
		android:id="@+id/setup_bottom_button"
		style="@style/SetupFragmentButton" />
</LinearLayout>